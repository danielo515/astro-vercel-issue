---
import Layout from "../layouts/Layout.astro";
import { ViewTransitions } from "astro:transitions";
---

<Layout title="Boda de Ali y Dani">
  <main class="flex flex-col gap-10">
    <div class="flex flex-col justify-center items-center">
      <h1>Sorry, but your page is in another castle!</h1>
    </div>
    <div class="flex justify-center gap-4 animate-fadeInUp z-10">
      <a href="/">Volver</a>
    </div>
  </main>
</Layout>
<ViewTransitions />

<style>
  h1 {
    text-align: center;
    font-size: 2rem;
    margin-top: 2rem;
    font-family: var(--mario-font);
    text-shadow: var(--mario-shadow);
  }
</style>
